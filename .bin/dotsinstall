#!/usr/bin/env bash

git clone --bare https://github.com/crian/dirty-dotfiles.git $HOME/.dirty-dotfiles
function dots {
   /usr/bin/git --git-dir=$HOME/.dirty-dotfiles/ --work-tree=$HOME $@
}
mkdir -p .dotfiles-backup
dots checkout
if [ $? = 0 ]; then
  echo "Checked out dotfiles.";
  else
    echo "Backing up pre-existing dotfiles.";
    dots checkout 2>&1 | egrep "\s+\." | awk {'print $1'} | xargs -I{} mv {} .dotfiles-backup/{}
fi;
dots checkout
dots config status.showUntrackedFiles no